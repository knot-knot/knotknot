<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

  <!--일기 하나의 레이아웃-->
    <ImageView
        android:id="@+id/lv_emoticon"
        android:layout_width="100dp"
        android:layout_height="113dp"
        android:layout_gravity="center_vertical" /><!--감정티콘-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_weight="4">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:id="@+id/lv_useremo"
           /> <!--누구의 일기인지-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WHO"
                android:textSize="20dp"
                android:textColor="#666666"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:id="@+id/lv_user"
                android:fontFamily="@font/nixgonm"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lv_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="SAMPLE"
            android:id="@+id/lv_description"
            android:fontFamily="@font/nixgonm"
            android:textSize="18dp"
            android:textColor="#666666"
            android:layout_weight="1"
            android:padding="15dp" /><!--글씨 크기 작게하고-->

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/reply"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textSize="15dp"/>
            <!--댓글 수-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:text="작성일자"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp"
            android:id="@+id/lv_createdAt"
            android:fontFamily="@font/nixgonm"
            />
        </LinearLayout>
</LinearLayout>
</LinearLayout>