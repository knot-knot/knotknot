<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">

    <!--일기 하나의 레이아웃-->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="113dp"
        android:layout_gravity="center_vertical" /><!--유저사진-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_weight="4">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WHO"
                android:textSize="20dp"
                android:textColor="#666666"
                android:fontFamily="@font/nixgonm"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:id="@+id/rl_user"/>

            <Button
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/trashcan"
                android:visibility="gone"
                android:textSize="10dp"
                android:layout_marginRight="25dp"
                android:id="@+id/rl_delete"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/speak"
            android:layout_marginRight="20dp">   <!--레이아웃 작게 새로 만들것-->

            <TextView
                android:id="@+id/rl_description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:fontFamily="@font/nixgonm"
                android:padding="15dp"
                android:text="SAMPLE"
                android:textColor="#666666"
                android:textSize="18dp"
                android:lineSpacingExtra="4dp"
                android:scrollbars = "vertical"/><!--글씨 크기 작게하고-->

        </LinearLayout>

    </LinearLayout>
</LinearLayout>