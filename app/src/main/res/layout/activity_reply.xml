<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReplyActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:id="@+id/tv_back"
            android:scaleType="centerCrop"
            android:background="@android:color/white"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:padding="20dp"
            android:fontFamily="@font/nixgonm"
            android:id="@+id/reply_description"
            android:background="@drawable/reply_diary_layout"/>
        <!--일기 작성-->
    </RelativeLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="right"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="수정"
        android:textSize="20dp"
        android:fontFamily="@font/nixgonm"
        android:visibility="gone"
        android:textColor="@color/colorWhite"
        android:background="@color/purple_200"

        android:id="@+id/reply_diary_modify"
        android:layout_marginRight="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="삭제"
        android:fontFamily="@font/nixgonm"
        android:textColor="@color/colorWhite"
        android:background="@color/purple_200"
        android:visibility="gone"
        android:id="@+id/reply_diary_delete"/>

    </LinearLayout>

    <ListView
        android:layout_width="380dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:divider="#00000000"
        android:id="@+id/reply"/>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <EditText
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:inputType="textMultiLine"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_marginRight="13dp"
            android:maxLines="3"
            android:fontFamily="@font/nixgonm"
            android:id="@+id/reply_add"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:gravity="bottom">
            <Button
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/heart"
                android:id="@+id/reply_add_btn"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>